#include "TXLib.h"
void drawMaket()
{

    txSetColor(TX_WHITE);
    txSetFillColor(TX_TRANSPARENT);
    txRectangle(50,20,925,85);
    txSetFillColor(TX_TRANSPARENT);
    txRectangle(10,10,990,690);
    txRectangle(30,250,310,550);
    txRectangle(350,250,620,550);
    txRectangle(650,250,940,550);
    txRectangle(30,560,310,630);
    txRectangle(350,560,620,630);
    txRectangle(650,560,940,630);

}


int main()
{
txCreateWindow (1000, 700);
txTextCursor (false);
    while (!GetAsyncKeyState(VK_ESCAPE))
    {
    drawMaket();
    txSetColor (TX_WHITE);
    txSelectFont ("Comic Sans", 45);
    txSetTextAlign (TA_CENTER);
    txTextOut (490,35, "1.Столица России");
    txDrawText();
    txDrawText();
    txDrawText();





























    }
txDisableAutoPause();
return 0;
}

